@model List<ListaModel>
@{
    ViewData["Title"] = "Lista Ubuntus";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Lista" asp-action="Criar">Adicionar novo ubuntu</a>
    </div>
    <br />
<h1 class= 'display-4'>Listagem de Ubuntus</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Linguagem</th>
      <th scope="col">Conhecimento</th>
      <th scope="col"></th>
    </tr>
  </thead>
    <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ListaModel lista in Model)
                {
                    <tr>
                        <th scope="row">@lista.Id</th>
                        <td>@lista.Nome</td>
                        <td>@lista.Linguagem</td>
                        <td>@lista.Conhecimento</td>
                    <td>
                        <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@lista.Id" asp-controller="Lista" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger"  asp-route-id="@lista.Id" asp-controller="Lista" asp-action="ApagarConfirmacao">Apagar</a>
                        </div>
                    </td>

                    </tr>
                }
            }
        </tbody>
</table>

</div>


